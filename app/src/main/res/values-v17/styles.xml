    <style name="SecondaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginButtonStyle" parent="TextAppearance.AppCompat.Button">


        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">@dimen/login_way_button_width_size</item>
        <item name="android:layout_height">@dimen/login_way_button_height_size</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/login_btn_style</item>
        <item name="android:padding">@dimen/spacing_large</item>

    </style>




</resources>