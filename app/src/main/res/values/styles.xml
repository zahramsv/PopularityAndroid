<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- main primary texts style-->
    <style name="PrimaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--secondary texts style-->
    <style name="SecondaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/iransans_light    </item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--header and headline texts style-->
    <style name="HeaderTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--custom RatingBar text style-->
    <style name="RateItemsTextStyle" parent="@style/SecondaryTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>


    <style name="LoginButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">@dimen/login_way_button_width_size</item>
        <item name="android:layout_height">@dimen/login_way_button_height_size</item>
        <item name="android:textSize">@dimen/login_way_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/login_btn_style</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
    </style>


    <style name="MenuDrawerItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:background">@drawable/menu_drawer_click_style</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/menu_drawer_text_margin_right</item>
        <item name="android:padding">@dimen/spacing_middle</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
    </style>

    <style name="AccentButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_way_button_height_size</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TwitterLoginButtonStyle" parent="AccentButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">@dimen/spacing_middle</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:layout_width">@dimen/twitter_login_btn_width</item>
        <item name="android:layout_height">@dimen/twitter_login_btn_height</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:fontFamily">@font/iransans_light</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Dark">
        <item name="cardCornerRadius">@dimen/login_type_card_view_corner_radius</item>
        <item name="cardElevation">@dimen/spacing_small</item>
        <item name="android:padding">@dimen/spacing_middle</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/iransans_light</item>
        <item name="android:layout_margin">@dimen/spacing_middle</item>

    </style>

    <style name="LoginWayDescriptionStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/decs_text_size</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xxlarge</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/iransans_light</item>

    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">

        <item name="android:windowBackground">@color/white</item>

    </style>


    <style name="EditText.Green" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>
    </style>






</resources>
