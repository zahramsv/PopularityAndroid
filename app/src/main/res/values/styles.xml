<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditText.Grey" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_60</item>
        <item name="colorControlHighlight">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_40</item>
    </style>


    <style name="Widget.Custom" parent="android:Widget" />

    <style name="CustomFeedbackRatingBar">
        <item name="filledDrawable">@drawable/ic_balloon</item>
        <item name="unfilledDrawable">@drawable/ic_balloon_off</item>
        <item name="maxRating">10</item>
    </style>

    <style name="PrimaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="WhitText" parent="PrimaryTextStyle">

    </style>

    <style name="HeaderTextStyle" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>

    </style>


    <style name="BlackSecondaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/spacing_middle</item>
        <item name="android:layout_marginTop">@dimen/spacing_middle</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>
    <style name="NormalTextStyle" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>

    </style>

    <style name="AccentNormalTextStyle" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>

    </style>

    <style name="SecondaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/spacing_middle</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>


    <style name="AccentSecondaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>


    <style name="RateItemsTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
    </style>

    <style name="LoginButtonStyle" parent="TextAppearance.AppCompat.Button">


        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">@dimen/login_way_button_width_size</item>
        <item name="android:layout_height">@dimen/login_way_button_height_size</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/login_btn_style</item>
        <item name="android:padding">@dimen/spacing_large</item>

    </style>



    <style name="MenuDrawerItemStyle" parent="Widget.AppCompat.TextView">


        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">@dimen/login_way_button_width_size</item>
        <item name="android:layout_height">@dimen/login_way_button_height_size</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/menu_drawer_text_margin_right</item>
        <item name="android:padding">@dimen/spacing_middle</item>

    </style>

    <style name="SendReceiveButtonStyle" parent="TextAppearance.AppCompat.Button">


        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/login_way_button_width_size</item>
        <item name="android:layout_height">@dimen/login_way_button_height_size</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/spacing_large</item>

    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/login_type_card_view_corner_radius</item>
        <item name="android:padding">@dimen/spacing_middle</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/spacing_middle</item>

    </style>
    <style name="LoginWayDescriptionStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:layout_margin">@dimen/spacing_middle</item>
        <item name="android:layout_height">50dp</item>

    </style>
    <style name="AppTheme.Launcher" parent="AppTheme">

        <item name="android:windowBackground">@color/white</item>

    </style>


    <style name="EditText.Green" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/green_500</item>
        <item name="colorControlHighlight">@color/green_500</item>
        <item name="colorControlNormal">@color/green_400</item>
    </style>

    <style name="Yellow.Small.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="Yellow.Small.AppCompatRatingBar.White" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/grey_20</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="Yellow.Very.Small.AppCompatRatingBar" parent="@style/Yellow.Small.AppCompatRatingBar">
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="Yellow.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="Yellow.Custom.AppCompatRatingBar" parent="@style/Yellow.Small.AppCompatRatingBar">

        <item name="android:progressDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:indeterminateDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>
</resources>
