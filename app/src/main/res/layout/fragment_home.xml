<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragment.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      >


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardUserRates"
                    style="@style/CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_receive_rates_cardView_height"
                    android:layout_margin="@dimen/spacing_middle"
                    android:paddingTop="@dimen/spacing_middle">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFavorites"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/spacing_large"
                        tools:listitem="@layout/receive_rate_item" />


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="195dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_share" />
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    style="@style/BlackSecondaryTextStyle"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:layout_width="match_parent"
                    android:text="@string/phone_contacts" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    style="@style/CardViewStyle"
                    android:backgroundTint="@color/grey_40"
                    android:layout_height="@dimen/friend_item_height">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFriends"
                        android:layout_margin="@dimen/spacing_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_friend" />
                </androidx.cardview.widget.CardView>


                <androidx.appcompat.widget.AppCompatButton
                    style="@style/SendReceiveButtonStyle"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_width="@dimen/twitter_login_btn_width"
                    android:layout_height="@dimen/twitter_login_btn_height"
                    android:text="@string/login_with_twitter_btn_txt" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</FrameLayout>