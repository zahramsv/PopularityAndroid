<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.LoginFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_xxxlarge">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLoginWihMockData"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@drawable/login_btn_style"
            android:text="Login with Mock Data"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height" />


        <Button
            android:id="@+id/btnLoginWithMobile"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@drawable/login_btn_style"
            android:text="Login with Phone Number"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height" />
        <Button
            android:id="@+id/btnLoginWithInstagram"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@drawable/login_btn_style"
            android:text="@string/instagram_login_bnt_txt"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height" />
        <Button
            android:id="@+id/btnLoginWithFacebook"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@drawable/login_btn_style"
            android:text="@string/facebook_login_btn_txt"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height"/>
        <Button
            android:id="@+id/btnLoginWithTwitter"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@drawable/login_btn_style"
            android:text="@string/twitter_login_btn_txt"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height" />

    </LinearLayout>

    </RelativeLayout>

</FrameLayout>