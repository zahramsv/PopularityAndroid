<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.LoginFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_xxxlarge">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/login_api_button"
            android:onClick="loginBtnClick"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@color/login_btn_color"
            android:text="Login with Mock Data"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/instagram_btn"
            android:onClick="loginBtnClick"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@color/login_btn_color"
            android:text="@string/instagram_login_bnt_txt"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/facebook_login_btn"
            android:onClick="loginBtnClick"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@color/login_btn_color"
            android:text="@string/facebook_login_btn_txt"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/twitter_login_btn"
            android:onClick="loginBtnClick"
            android:layout_centerInParent="true"
            android:padding="@dimen/spacing_large"
            android:background="@color/login_btn_color"
            android:text="@string/twitter_login_btn_txt"
            android:layout_width="@dimen/login_btn_length"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="@dimen/login_btn_height"
            tools:ignore="OnClick" />

    </LinearLayout>

    </RelativeLayout>

</FrameLayout>