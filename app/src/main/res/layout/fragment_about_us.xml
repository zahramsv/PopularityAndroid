<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragment.HomeFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewUserRates"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/spacing_middle">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.codesgood.views.JustifiedTextView
                        android:lineSpacingExtra="@dimen/spacing_small"
                        style="@style/LoginWayDescriptionStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/about_us_desc" />

                    <com.codesgood.views.JustifiedTextView
                        style="@style/LoginWayDescriptionStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_us_team_member"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                style="@style/PrimaryTextStyle"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/fallow_us" />


            <androidx.cardview.widget.CardView
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:padding="@dimen/spacing_small"
                            android:background="@drawable/about_us_btn_styles"
                            android:id="@+id/imgFacebook"
                            android:layout_width="@dimen/about_us_image_icon_height"
                            android:layout_height="@dimen/about_us_image_icon_height"
                            android:src="@drawable/icon_facebook" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_marginRight="40dp"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/about_us_btn_styles"
                            android:padding="@dimen/spacing_small"
                            android:id="@+id/imgLinkedIn"
                            android:layout_width="@dimen/about_us_image_icon_height"
                            android:layout_height="@dimen/about_us_image_icon_height"
                            android:src="@drawable/icon_linkedin" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:padding="@dimen/spacing_small"
                            android:id="@+id/imgTwitter"
                            android:background="@drawable/about_us_btn_styles"
                            android:layout_width="@dimen/about_us_image_icon_height"
                            android:layout_height="@dimen/about_us_image_icon_height"
                            android:src="@drawable/icon_twitter"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_middle"
                        android:weightSum="3"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:padding="@dimen/spacing_small"
                            android:id="@+id/imgInstagram"
                            android:src="@drawable/icon_instagram"
                            android:background="@drawable/about_us_btn_styles"
                            android:layout_width="@dimen/about_us_image_icon_height"
                            android:layout_height="@dimen/about_us_image_icon_height" />

                        <androidx.appcompat.widget.AppCompatImageView
                           android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:padding="@dimen/spacing_small"
                            android:id="@+id/imgYoutube"
                            android:background="@drawable/about_us_btn_styles"
                            android:layout_width="@dimen/about_us_image_icon_height"
                            android:layout_height="@dimen/about_us_image_icon_height"
                            android:src="@drawable/ic_youtube"/>


                        <androidx.appcompat.widget.AppCompatImageView

                            android:padding="@dimen/spacing_small"
                            android:id="@+id/imgWhatsApp"
                            android:layout_width="@dimen/about_us_image_icon_height"
                            android:layout_height="@dimen/about_us_image_icon_height"
                            android:background="@drawable/about_us_btn_styles"
                            android:src="@drawable/icon_whatsapp"/>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</FrameLayout>