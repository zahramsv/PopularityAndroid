<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragment.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardUserRates"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_receive_rates_cardView_height"
            android:layout_margin="@dimen/spacing_middle"
            android:paddingTop="@dimen/spacing_middle">


            <TextView
                style="@style/LoginWayDescriptionStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_us_txt" />


        </androidx.cardview.widget.CardView>


        <TextView
            style="@style/HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:layout_height="@dimen/spacing_xxlarge"
            android:text="@string/fallow_us" />


        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_middle"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/media_fallow_row_height"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/about_us_image_icon_height"
                        android:layout_height="@dimen/about_us_image_icon_height"
                        android:layout_margin="@dimen/spacing_large"
                        android:src="@drawable/icon_facebook" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/about_us_image_icon_height"
                        android:layout_height="@dimen/about_us_image_icon_height"
                        android:layout_margin="@dimen/spacing_large"
                        android:src="@drawable/icon_linkedin" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/about_us_image_icon_height"
                        android:layout_height="@dimen/about_us_image_icon_height"
                        android:layout_margin="@dimen/spacing_large"
                        android:src="@drawable/icon_twitter"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/media_fallow_row_height"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/icon_instagram"
                        android:layout_width="@dimen/about_us_image_icon_height"
                        android:layout_height="@dimen/about_us_image_icon_height"
                        android:layout_margin="@dimen/spacing_large" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/about_us_image_icon_height"
                        android:layout_height="@dimen/about_us_image_icon_height"
                        android:layout_margin="@dimen/spacing_large"
                        android:src="@drawable/ic_youtube"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/about_us_image_icon_height"
                        android:layout_height="@dimen/about_us_image_icon_height"
                        android:layout_margin="@dimen/spacing_large"
                        android:src="@drawable/icon_whatsapp"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</FrameLayout>