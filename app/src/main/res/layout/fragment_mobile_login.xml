<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_icon_normal_height"
                android:layout_marginTop="@dimen/margin_top_from_toolbar">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/spacing_xxlarge"
                    android:layout_marginBottom="@dimen/spacing_xlarge"
                    android:text="@string/app_name"
                    android:textColor="@color/white" />


                <ImageView
                    android:layout_width="@dimen/app_icon_normal_height"
                    android:layout_height="@dimen/app_icon_normal_width"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/spacing_large"
                    android:src="@drawable/ic_app" />
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMobileRegister"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="@dimen/login_type_card_view_height"
                android:layout_margin="@dimen/login_type_card_view_margin"
                app:cardCornerRadius="@dimen/login_type_card_view_corner_radius"
               >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        style="@style/LoginWayDescriptionStyle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:text="@string/login_with_phone_number_description" />


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_xxxlarge"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_xxxlarge"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:hint="@string/phone_number">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtMobile"
                            android:textSize="@dimen/normal_text_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnReceiveCode"
                        style="@style/SendReceiveButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/send_sms_btn_txt" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/login_type_card_view_corner_radius"
                android:id="@+id/cardViewVerifyCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_type_card_view_height"
                android:layout_margin="@dimen/login_type_card_view_margin"
                android:visibility="gone"
               >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                        <TextView
                            android:layout_marginTop="@dimen/spacing_large"
                            style="@style/LoginWayDescriptionStyle"
                            android:layout_width="match_parent"
                            android:text="@string/login_with_phone_number_description" />


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edtVerifyCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_xxxlarge"
                        android:layout_marginRight="@dimen/spacing_middle" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnVerifyCode"
                        style="@style/SendReceiveButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/verify_code" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SecondaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/secondary_text_view_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/spacing_large"
            android:gravity="center"
            android:text="@string/copy_right" />
    </RelativeLayout>



</LinearLayout>